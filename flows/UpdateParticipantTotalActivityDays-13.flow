    <assignments>
        <name>subActivityDays</name>
        <label>subActivityDays</label>
        <locationX>576</locationX>
        <locationY>419</locationY>
        <assignmentItems>
            <assignToReference>theParticipant.Total_Activity_Days__c</assignToReference>
